{
  "name": "Add Post",
  "model": "post",
  "fields": [
    {
      "name": "Title Post",
      "label": "Title Post",
      "model": "title",
      "placeholder": "Title Post",
      "type": "text",
      "require": true
    },
    {
      "name": "H1 Post",
      "label": "H1 Post",
      "model": "h1",
      "type": "text",
      "require": true,
      "placeholder": "H1"
    },
    {
      "name": "H1 Link",
      "label": "H1 Link",
      "model": "link",
      "type": "text",
      "require": true,
      "placeholder": "Link",
      "value": {
        "from": "h1",
        "params": "category",
        "fn": "slugify"
      },
      "readonly": true
    },
    {
      "name": "published",
      "label": "published",
      "model": "published",
      "type": "date",
      "require": true,
      "placeholder": "published"
    },
    {
      "name": "journal",
      "label": "journal",
      "model": "journal",
      "type": "text",
      "placeholder": "Journal"
    },
    {
      "name": "pdf",
      "label": "Pdf",
      "model": "pdf",
      "type": "file",
      "placeholder": "PDF"
    },
    {
      "name": "exterlink",
      "label": "exterlink",
      "model": "exterlink",
      "type": "text",
      "placeholder": "exterlink"
    },
    
    {
      "name": "Authors",
      "label": "Authors",
      "model": "authors",
      "type": "array",
      "placeholder": "Authors"
    },
    {
      "name": "Post Category",
      "label": "Post Category",
      "model": "category",
      "type": {
        "select": {
          "options": "category"
        }
      },
      "require": true,
      "placeholder": "Category Post"
    },
    {
      "name": "Type Component",
      "label": "Template",
      "model": "componentName",
      "type": {
        "select": {
          "options": [
            "news",
            "category",
            "publications",
            "research"
          ]
        }
      },
      "require": true,
      "placeholder": "Category Status"
    },
    {
      "name": "Tags Post",
      "label": "Tags Post",
      "model": "tags",
      "type": {
        "select": {
          "options": "tags"
        }
      },
      "multiple": true,
      "require": true,
      "placeholder": "Post Tags"
    },
    {
      "name": "Status Post",
      "label": "Status Post",
      "model": "status",
      "type": {
        "select": {
          "options": "status"
        }
      },
      "require": true,
      "placeholder": "Post Status"
    },
    {
      "name": "Post Description",
      "label": "Post Description",
      "model": "description",
      "type": "textarea",
      "require": true,
      "placeholder": "Post Description"
    },
    {
      "name": "Post Cover Image",
      "label": "Post Cover",
      "model": "image_large",
      "type": "image",
      "require": true
    },
    {
      "name": "Post Small Image",
      "label": "Post Image",
      "model": "image_small",
      "type": "image",
      "require": true
    },
    {
      "name": "Post Content",
      "label": "Post Content",
      "model": "content",
      "type": "content",
      "require": true
    }
  ]
}