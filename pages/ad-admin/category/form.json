{
  "name": "Add Category",
  "model": "category",
  "fields": [
    {
      "name": "Title Category",
      "label": "Title Category",
      "model": "title",
      "type": "text",
      "require": true
    },
    {
      "name": "Name Category",
      "label": "Name Category",
      "model": "name",
      "type": "text",
      "require": true
    },
    {
      "name": "H1 Category",
      "label": "H1 Category",
      "model": "h1",
      "type": "text",
      "require": true,
      "placeholder": "h1 slug",
      "value": {
        "from": "name",
        "fn": "slugify"
      },
      "readonly": true
    },
    {
      "name": "Link Category",
      "label": "Link Category",
      "model": "link",
      "type": "text",
      "require": true
    },
    {
      "name": "Status Post",
      "label": "Status Post",
      "model": "status",
      "type": {
        "select": {
          "options": "status"
        }
      },
      "require": true,
      "placeholder": "Category Status"
    },
    {
      "name": "Desc Category",
      "label": "Desc Category",
      "model": "description",
      "type": "textarea",
      "require": true,
      "placeholder": "Explain what the Category is talking about"
    },
    {
      "name": "Cover Category",
      "label": "Cover Category",
      "model": "image_large",
      "type": "image",
      "require": true
    },
    {
      "name": "Small Category",
      "label": "Small Category",
      "model": "image_small",
      "type": "image",
      "require": true
    },
    {
      "name": "Category Content",
      "label": "Category Content",
      "model": "content",
      "type": "content",
      "require": true
    }
  ]
}